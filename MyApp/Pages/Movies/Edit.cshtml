@page
@model MyApp.Pages.Movies.EditModel
@{
}

<form method="post" class="form">
    <h2>Edit Movie</h2>
    <input asp-for="Id" hidden />


    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Language"></label>
        <br />
        <input asp-for="Language" type="radio" class="form-control-radio" value="English" id="english" checked />
        <label for="english">English</label>
        <br />
        <input asp-for="Language" type="radio" class="form-control-radio" value="French" id="french" />
        <label for="french">French</label>
        <br />
        <input asp-for="Language" type="radio" class="form-control-radio" value="Spanish" id="spanish" />
        <label for="spanish">Spanish</label><br />

    </div>


    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsWatched"></label>
        <input asp-for="IsWatched" class="form-control-checkbox" />
        <span asp-validation-for="IsWatched" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Score"></label>
        <select asp-for="Score"
                asp-items="Html.GetEnumSelectList<MyApp.Models.ScoreValue>()" class="form-control">
            <option value="">Not rated</option>
        </select>
        <span asp-validation-for="Score" class="text-danger"></span>
    </div>

    <button class="btn btn-primary">Submit</button>
</form>

@section scripts{
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}